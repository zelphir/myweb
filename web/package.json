{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://robertomanzella.com/",
  "scripts": {
    "update-content": "node scripts/getRoutes.js",
    "sass": "../shared/scripts/sass.sh",
    "watch-sass": "yarn sass && yarn sass --watch",
    "prestart": "yarn update-content && ../shared/scripts/copy_envs.sh",
    "prebuild": "NODE_ENV=production yarn prestart && ../shared/scripts/copy_envs.sh .env.production",
    "start-js": "react-app-rewired start",
    "start": "npm-run-all -p watch-sass start-js",
    "build": "yarn sass && react-app-rewired build && react-snap && yarn run generate-sw",
    "test": "react-app-rewired test --env=jsdom",
    "generate-sw": "sw-precache --root=build --config scripts/sw-precache-config.js && uglifyjs build/service-worker.js -o build/service-worker.js",
    "generate-robots": "node scripts/generateRobots.js",
    "serve": " yarn build && serve -s build -p 3000",
    "deploy": "NODE_ENV=production yarn generate-robots && yarn build && netlifyctl d -b build -n robertomanzella -C netlify.prod.toml",
    "deploy:beta": "NODE_ENV=production yarn generate-robots beta && REACT_APP_DOMAIN=beta.robertomanzella.com yarn build && netlifyctl d -b build -n betarobertomanzella"
  },
  "devDependencies": {
    "chalk": "^2.4.0",
    "generate-robotstxt": "^5.0.5",
    "gray-matter": "^4.0.1",
    "klaw-sync": "^3.0.2",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.1",
    "react-app-rewire-emotion": "^3.0.1",
    "react-app-rewired": "^1.5.0",
    "react-scripts": "^2.0.0-next.b2fd8db8",
    "react-snap": "zelphir/react-snap",
    "remove-markdown": "^0.2.2",
    "sw-precache": "^5.2.1",
    "uglifyjs": "^2.4.11"
  },
  "dependencies": {
    "apollo-boost": "^0.1.4",
    "apollo-link-ws": "^1.0.8",
    "classnames": "^2.2.5",
    "date-fns": "^1.29.0",
    "emotion": "^9.1.2",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "highlight.js": "^9.12.0",
    "loadable-components": "^1.3.0",
    "normalize.css": "^8.0.0",
    "perfect-scrollbar": "^1.3.0",
    "pigeon-maps": "^0.9.2",
    "pigeon-overlay": "^0.2.2",
    "polished": "^1.9.2",
    "randomcolor": "^0.5.3",
    "react": "^16.3.2",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.3.2",
    "react-emotion": "^9.1.2",
    "react-form": "^3.5.2",
    "react-helmet": "^5.2.0",
    "react-lazyload": "^2.3.0",
    "react-markdown": "^3.3.0",
    "react-router-dom": "^4.2.2",
    "react-router-ga": "^1.0.0",
    "react-sidebarjs": "^1.0.1",
    "react-spring": "^4.2.1",
    "react-tooltip": "^3.5.0",
    "react-transition-group": "^2.3.1",
    "subscriptions-transport-ws": "^0.9.7",
    "validator": "^9.4.1",
    "webfontloader": "^1.6.28"
  },
  "reactSnap": {
    "concurrency": 8,
    "headless": true,
    "waitFor": 1000,
    "cacheAjaxRequests": true,
    "asyncScriptTags": true,
    "http2PushManifest": true,
    "inlineCss": true,
    "sitemap": true,
    "exclude": ["/photo/**", "/resume.pdf"],
    "pdf": [
      {
        "route": "/resume",
        "options": {
          "pageRanges": "1"
        }
      }
    ],
    "viewport": {
      "width": 1440,
      "height": 1280
    }
  },
  "browserslist": {
    "development": ["last 2 chrome versions", "last 2 firefox versions", "last 2 edge versions"],
    "production": [">1%", "last 4 versions", "Firefox ESR", "not ie < 11"]
  }
}
