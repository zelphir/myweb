{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "chalk": "^2.3.2",
    "electron-html-to": "^2.6.0",
    "electron-prebuilt": "^1.4.13",
    "gray-matter": "^4.0.1",
    "klaw-sync": "^3.0.2",
    "node-sass": "^4.8.3",
    "prop-types": "^15.6.1",
    "react-scripts": "^2.0.0-next.b2fd8db8",
    "react-snap": "^1.12.0",
    "remarkable": "^1.7.1",
    "sw-precache": "^5.2.1",
    "uglifyjs": "^2.4.11"
  },
  "dependencies": {
    "apollo-boost": "^0.1.4",
    "apollo-link-ws": "^1.0.7",
    "classnames": "^2.2.5",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "loadable-components": "^1.3.0",
    "react": "^16.3.1",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.3.1",
    "react-form": "^3.5.1",
    "react-helmet": "^5.2.0",
    "react-inlinesvg": "^0.8.1",
    "react-lazyload": "^2.3.0",
    "react-modal": "^3.3.2",
    "react-router-dom": "^4.2.2",
    "remarkable-react": "^1.3.0",
    "styled-components": "^3.2.5",
    "subscriptions-transport-ws": "^0.9.7",
    "validator": "^9.4.1"
  },
  "scripts": {
    "prestart": "node scripts/getRoutes.js && sed -e 's/^/REACT_APP_/' ../.env > .env",
    "prebuild": "yarn prestart && sed -e 's/^/REACT_APP_/' ../.env.production > .env.production",
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "build": "yarn run build-react && react-snap && yarn run generate-sw",
    "test": "react-scripts test --env=jsdom",
    "generate-sw": "sw-precache --root=build --config scripts/sw-precache-config.js && uglifyjs build/service-worker.js -o build/service-worker.js"
  },
  "reactSnap": {
    "cacheAjaxRequests": true,
    "inlineCss": true,
    "http2PushManifest": true,
    "include": ["/shell.html"]
  },
  "browserslist": {
    "development": ["last 2 chrome versions", "last 2 firefox versions", "last 2 edge versions"],
    "production": [">1%", "last 4 versions", "Firefox ESR", "not ie < 11"]
  }
}
