{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "sass": "../shared/scripts/sass.sh",
    "watch-sass": "yarn sass && yarn sass --watch",
    "prestart": "node scripts/getRoutes.js && ../shared/scripts/copy_envs.sh",
    "prebuild": "NODE_ENV=production yarn prestart && ../shared/scripts/copy_envs.sh .env.production",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-sass start-js",
    "build": "yarn sass && react-scripts build && react-snap && yarn run generate-sw",
    "test": "react-scripts test --env=jsdom",
    "generate-sw": "sw-precache --root=build --config scripts/sw-precache-config.js && uglifyjs build/service-worker.js -o build/service-worker.js",
    "generate-robots": "node scripts/generateRobots.js",
    "serve": " yarn build && serve -s build -p 3000",
    "deploy": "NODE_ENV=production yarn generate-robots && yarn build && netlifyctl d -b build -n robertomanzella -C netlify.prod.toml",
    "deploy:beta": "NODE_ENV=production yarn generate-robots beta && REACT_APP_DOMAIN=beta.robertomanzella.com yarn build && netlifyctl d -b build -n betarobertomanzella"
  },
  "devDependencies": {
    "chalk": "^2.4.0",
    "electron-html-to": "^2.6.0",
    "electron-prebuilt": "^1.4.13",
    "generate-robotstxt": "^5.0.5",
    "gray-matter": "^4.0.1",
    "klaw-sync": "^3.0.2",
    "node-sass": "^4.8.3",
    "node-sass-json-importer": "^3.2.0",
    "npm-run-all": "^4.1.2",
    "prop-types": "^15.6.1",
    "react-scripts": "^2.0.0-next.b2fd8db8",
    "react-snap": "^1.12.2",
    "remarkable": "^1.7.1",
    "sw-precache": "^5.2.1",
    "uglifyjs": "^2.4.11"
  },
  "dependencies": {
    "apollo-boost": "^0.1.4",
    "apollo-link-ws": "^1.0.8",
    "classnames": "^2.2.5",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "gray-percentage": "^2.0.0",
    "loadable-components": "^1.3.0",
    "normalize.css": "^8.0.0",
    "perfect-scrollbar": "^1.3.0",
    "pigeon-maps": "^0.9.2",
    "pigeon-overlay": "^0.2.2",
    "randomcolor": "^0.5.3",
    "react": "^16.3.2",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.3.2",
    "react-form": "^3.5.2",
    "react-helmet": "^5.2.0",
    "react-lazyload": "^2.3.0",
    "react-motion": "^0.5.2",
    "react-router-dom": "^4.2.2",
    "react-router-ga": "^1.0.0",
    "react-sidebarjs": "^1.0.1",
    "react-tooltip": "^3.5.0",
    "react-transition-group": "^2.3.1",
    "remarkable-react": "^1.3.0",
    "subscriptions-transport-ws": "^0.9.7",
    "typeface-quattrocento-sans": "^0.0.54",
    "typeface-work-sans": "^0.0.54",
    "typography": "^0.16.6",
    "typography-breakpoint-constants": "^0.15.10",
    "typography-theme-fairy-gates": "^0.15.11",
    "validator": "^9.4.1",
    "webfontloader": "^1.6.28"
  },
  "reactSnap": {
    "concurrency": 8,
    "headless": true,
    "waitFor": 1000,
    "skipThirdPartyRequests": true,
    "cacheAjaxRequests": true,
    "asyncScriptTags": true,
    "userAgent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_13_3) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/67.0.3396.0 Safari/537.36",
    "viewport": {
      "width": 1440,
      "height": 1280
    }
  },
  "browserslist": {
    "development": ["last 2 chrome versions", "last 2 firefox versions", "last 2 edge versions"],
    "production": [">1%", "last 4 versions", "Firefox ESR", "not ie < 11"]
  }
}
